    position top
    strip_workspace_numbers yes

    colors {
        background $bg 
#        statusline #000000
#        separator  #ff0000

#                           BORDER  BG      TEXT
        focused_workspace   $bg     $bg     #3ec2ff
        active_workspace    $bg     $bg     #3ec2ff
#        inactive_workspace  $bg     $bg     #94AAAB
        inactive_workspace  $bg     $bg     #ffffff
        urgent_workspace    $bg     $bg     #ff0000
